{% extends 'base.html.twig' %}

{% block title %}Gestion Rv - Gestion{% endblock %}
{% block navTitle%}Secretaire{%endblock%}
{% block body %}
<main class="main-container py-4">
    <div class="container d-flex justify-content-center">
        <div class="card shadow-sm p-3 bg-body" style="max-width: 600px; width: 100%;">
            <div class="card-body">
                <h4 class="card-title mb-3">Traitement Demande de Rendez-Vous</h4>
                <div class="mb-2"><strong>Type :</strong> {{ rendezVous.type.value }}</div>
                <div class="mb-2"><strong>Date :</strong> {{ rendezVous.dateRv|date('d/m/Y H:i') }}</div>
                {% if rendezVous.consultation %}
                    <div class="mb-2"><strong>Consultation :</strong> {{ rendezVous.consultation.value }}</div>
                {% endif %}
                {% if rendezVous.prestation %}
                    <div class="mb-2"><strong>Prestation :</strong> {{ rendezVous.prestation.value }}</div>
                {% endif %}
                <div class="mb-3"><strong>Patient :</strong> {{ rendezVous.patient.nom }}</div>
                <div class="d-flex gap-2">
                    <a href="{{ path('app_gestion', {'id': rendezVous.id, 'action': 'annuler'}) }}" class="btn btn-danger">Annuler</a>
                    <a href="{{ path('app_gestion', {'id': rendezVous.id, 'action': 'valider'}) }}" class="btn btn-success">Valider</a>
                </div>
            </div>
        </div>
    </div>
</main>
{% endblock %}
